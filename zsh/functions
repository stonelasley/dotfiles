mux_attach_or_create() {
  local template_name="${1:-main}"  # Use 'main' if no argument is given
  local session_name

  session_name=$(basename "$PWD" | tr '[:upper:]' '[:lower:]' | sed 's/[^a-z0-9_-]/-/g')

  if tmux has-session -t "$session_name" 2>/dev/null; then
    echo "ðŸ”„ Attaching to existing session: $session_name"
    tmux attach-session -t "$session_name"
  else
    echo "ðŸš€ Starting new tmuxinator session: $session_name using template: $template_name"
    tmuxinator start "$template_name"
  fi
}


function ensure-az-devops() {
  if ! az extension show --name azure-devops &>/dev/null; then
    echo "Installing Azure DevOps CLI extension..."
    az extension add --name azure-devops
  fi
}

function azd() {
  ensure-az-devops
  command az devops "$@"
}

function azr() {
  ensure-az-devops
  command az repos "$@"
}

function azp() {
  ensure-az-devops
  command az pipelines "$@"
}

function lscolors() {
  print -rl -- $(ls ~/.st1/.vendor/chriskempson-base16-shell/scripts(:r))
}
