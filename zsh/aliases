#
# Command aliases
#
alias ....='cd ../..'
alias cd..='cd ..'
alias :e=nvim
alias :q=exit
alias :sp='test -n $TMUX && tmux split-window'
alias :vs='test -n $TMUX && tmux split-window -h'
alias t="tmuxinator"
alias v=nvim
alias vim=nvim
alias vsvim="nvim -u $HOME/.config/nvim/vsinit.vim"
alias vrc="nvim $HOME/.vimrc"
alias zrc="nvim $HOME/.zshrc"
alias trc="nvim $HOME/.tmux.conf"
alias szrc="source $HOME/.zshrc"
alias st1="cd $HOME/.st1"
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias dnb='dotnet build'
alias dnt='dotnet test'

#
# Git aliases
#
alias gcz='git cz'

#
# Random Projects
#
alias projects="cd $PROJECTHOME"
alias luamake= /opt/sumneko/3rd/luamake/compile/install.sh
