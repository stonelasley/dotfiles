#
# Command aliases
#
alias ....='cd ../..'
alias cd..='cd ..'
alias :e=nvim
alias :q=exit
alias :sp='test -n $TMUX && tmux split-window'
alias :vs='test -n $TMUX && tmux split-window -h'
alias t="tmux"
alias v=nvim
alias vim=nvim
alias vsvim="nvim -u ~/.config/nvim/vsinit.vim"
alias vrc="vim $HOME/.vimrc"
alias zrc="vim $HOME/.zshrc"
alias trc="vim $HOME/.tmux.conf"
alias szrc="source ~/.zshrc"
alias st1="cd ~/.st1"
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

#
# Git aliases
#
alias gcz='git cz'

#
# Random Projects
#
alias projects="cd $PROJECTHOME"
alias luamake= /opt/sumneko/3rd/luamake/compile/install.sh
