# Global Setttings
set sort_aux=last-date-received
set sort=reverse-threads

# Html Emails
auto_view text/html
alternative_order text/plain text/enriched text/html

# Folder hooks
folder-hook 'account.io.lasley.stone' 'source ~/.mutt/account.io.lasley.stone'
folder-hook 'account.com.gmail.sclarklasley' 'source ~/.mutt/account.com.gmail.sclarklasley'
folder-hook 'account.com.gmail.stonelasley' 'source ~/.mutt/account.com.gmail.stonelasley'
folder-hook 'account.com.gmail.lasleybills' 'source ~/.mutt/account.com.gmail.lasleybills'

# Default Account
source ~/.mutt/account.io.lasley.stone

# Macros
macro index <f2> '<sync-mailbox><enter-command>source ~/.mutt/account.io.lasley.stone<enter><change-folder>!<enter>
macro index <f3> '<sync-mailbox><enter-command>source ~/.mutt/account.com.gmail.sclarklasley<enter><change-folder>!<enter>
macro index <f4> '<sync-mailbox><enter-command>source ~/.mutt/account.com.gmail.stonelasley<enter><change-folder>!<enter>
macro index <f5> '<sync-mailbox><enter-command>source ~/.mutt/account.com.gmail.lasleybills<enter><change-folder>!<enter>


